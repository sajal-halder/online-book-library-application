}
},
"/books/all": {
"get": {
"tags": [
"book-controller"
],
"operationId": "getAllBooks",
"responses": {
"200": {
"description": "OK",
"content": {
"*/*": {
"schema": {
"type": "array",
"items": {
"$ref": "#/components/schemas/BookResponse"
}
}
}
}
}
}
}
},
"/books/delete/bookId/{bookId}": {
"delete": {
"tags": [
"book-controller"
],
"operationId": "deleteBook",
"parameters": [
{
"name": "bookId",
"in": "path",
"required": true,
"schema": {
"type": "string"
}
}
],
"responses": {
