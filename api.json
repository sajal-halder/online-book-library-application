"description": "OK",
"content": {
"*/*": {
"schema": {
"type": "object"
}
}
}
}
}
}
}
},
"components": {
"schemas": {
"BookRequest": {
"type": "object",
"properties": {
"title": {
"type": "string"
},
"authorName": {
"type": "string"
},
"genre": {
"type": "string"
},
"description": {
"type": "string"
},
"price": {
"type": "number",
"format": "double"
}
}
},
"BookResponse": {
"type": "object",
"properties": {
"bookId": {
"type": "integer",
"format": "int64"
},
"title": {
"type": "string"
},
"authorName": {
"type": "string"
},
"genre": {
"type": "string"
},
"description": {
"type": "string"
},
"price": {
"type": "number",
"format": "double"
}
}
},
"RegisterRequest": {
"required": [
"address",
"email",
"firstName",
"lastName",
"password",
"roles"
],
"type": "object",
"properties": {
"firstName": {
"type": "string"
},
"lastName": {
"type": "string"
},
"email": {
"type": "string"
},
"password": {
"type": "string"
},
"address": {
"type": "string"
},
"roles": {
"type": "array",
"items": {
"type": "string"
}
}
}
},
"LoginRequest": {
"type": "object",
"properties": {
"email": {
"type": "string"
},
"password": {
"type": "string"
}
}
}
}
}
}