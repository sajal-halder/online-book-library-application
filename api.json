}
},
"/books/author/{authorName}": {
"get": {
"tags": [
"book-controller"
],
"operationId": "getBooksByAuthorName",
"parameters": [
{
"name": "authorName",
"in": "path",
"required": true,
"schema": {
"type": "string"
}
}
],
"responses": {
"200": {
"description": "OK",
"content": {
"*/*": {
"schema": {
"type": "array",
"items": {
"$ref": "#/components/schemas/BookResponse"
}
}
}
}
}
}
}
},
"/books/author-title/{authorName}/{bookTitle}": {
"get": {
"tags": [
"book-controller"
],
"operationId": "getBookByAuthorNameAndTitle",
"parameters": [
{
"name": "authorName",
"in": "path",
"required": true,
"schema": {
"type": "string"
}
},
{
"name": "bookTitle",
"in": "path",
"required": true,
"schema": {
"type": "string"
}
}
],
